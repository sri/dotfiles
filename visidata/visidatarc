# -*-mode: python-*-

from visidata import VisiData, TextSheet, vd, Path, Sheet

@VisiData.api
class MyHelpSheet(TextSheet):
    guide = open("/Users/sri/my/dotfiles/visidata/visidata.org").read()



BaseSheet.addCommand(
    '^A',
    'open-my-help-csv',
    "vd.push(MyHelpSheet(name, rows=[]))",
    'open a specific CSV')

