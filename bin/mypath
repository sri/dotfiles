#!/usr/bin/env python3

import sys
import os

def main():
    dirs = os.getenv('PATH').split(os.pathsep)

    seen = set()
    for dir in dirs:
        msgs = []
        if dir in seen:
            msgs.append('duplicate')
        if not os.path.isdir(dir):
            msgs.append('not-a-dir')

        if len(msgs) > 0:
            warning = "--------- " + ','.join(msgs) + " "
            print(f"{warning}{dir}")
        else:
            print(dir)

        seen.add(dir)

if __name__ == '__main__':
    main()
